# Google Cloud Project
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

# Google Cloud Storage (for generated images)
GCS_BUCKET_NAME=your-gcp-project-id-enikki-images

# Quota Project (required for ADC with Vertex AI)
GOOGLE_CLOUD_QUOTA_PROJECT=your-gcp-project-id

# Google Application Credentials (for local development)
# Path to your service account key JSON file
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# API Key for authentication
API_KEY=your-secret-api-key

# API Settings
API_PORT=8000

# Discord Webhook (for notification on diary completion)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxxxx/yyyyy

# Frontend URL (for links in notifications)
FRONTEND_URL=http://localhost:5173

# CORS Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
